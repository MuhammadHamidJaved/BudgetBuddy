<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_box.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#FFFFFF" /> <!-- Change background color as needed -->

    <corners android:radius="12dp" /> <!-- Adjust radius for desired roundness -->

    <stroke
        android:width="1dp"
        android:color="#DDDDDD" /> <!-- Optional: light border -->

    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
